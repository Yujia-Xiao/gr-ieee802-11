<block>
  <name>Channel power</name>
  <key>ieee802_11_channel_power</key>
  <category>IEEE802.11</category>
  <import>import ieee802_11</import>
  <make>ieee802_11.channel_power($n_samples, $debug)</make>
  <param>
    <name>N_samples</name>
    <key>n_samples</key>
    <type>int</type>
  </param>
   <param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
